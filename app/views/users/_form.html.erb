<%= form_with model: @user, class:"form_margin_top" do |form| %>
    <%= form.label :name %>
    <%= form.text_field :name, class:"textBox"%>
    <div class="error_message"><%= @user.errors[:name].to_sentence%></div>
   
    <%= form.label :last_name %>
    <%= form.text_field :last_name, class:"textBox" %>
    <div class="error_message"><%= @user.errors[:last_name].to_sentence%></div>

    <%= form.label :email %>
    <%= form.text_field :email, class:"textBox" %>
    <div class="error_message"><%= @user.errors[:email].to_sentence%></div>

    <%= form.label :password %>
    <%= form.text_field :password, class:"textBox" %>
    <div class="error_message"><%= @user.errors[:password].to_sentence%></div>

    <%= form.label :password_confirmation %>
    <%= form.text_field :password_confirmation, class:"textBox" %>
    <div class="error_message"><%= @user.errors[:password_confirmation].to_sentence%></div>

    <%= form.submit t('.register_button'), class:"btn new_user" %>

<% end %>
